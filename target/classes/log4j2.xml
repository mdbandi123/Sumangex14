<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="SBCLogConfig">
	<Appenders>

		<File name="FILE1"
			fileName="src/main/resources/files/simple_app.log">
			<PatternLayout
				pattern="%p - %d{yyyy-MM-dd HH:mm:ss,SSS} - %F - %m\n" />
		</File>

		<RollingFile name="ROLLFILE1"
			fileName="src/main/resources/files/traparray.log"
			filePattern="src/main/resources/files/traparray-%d{yyyy-MM-dd_HH-mm-ss}.log">
			<PatternLayout pattern="%p: %m (%d{yyyy-MM-dd})\n" />
			<Policies>
				<TimeBasedTriggeringPolicy interval="1" />
			</Policies>
			<DefaultRolloverStrategy />
		</RollingFile>

		<RollingFile name="ROLLFILE2"
			fileName="src/main/resources/files/checkstr.log"
			filePattern="src/main/resources/files/checkstr-%i.log">
			<PatternLayout
				pattern="%d{yyyy/MM/dd HH:mm:ss,SSS} [ %p ] %C{1} - %m\n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="10KB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />
		</RollingFile>

	</Appenders>

	<Loggers>

		<Logger name="LOGGER1" additivity="false" level="INFO">
			<AppenderRef ref="FILE1" />
		</Logger>

		<Logger name="LOGGER2" additivity="false" level="ERROR">
			<AppenderRef ref="ROLLFILE1" />
		</Logger>

		<Logger name="LOGGER3" additivity="false" level="INFO">
			<AppenderRef ref="ROLLFILE2" />
		</Logger>

	</Loggers>
</Configuration>